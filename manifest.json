{
  "manifest_version": 3,
  "name": "FlowMentor AI",
  "version": "1.0",
  "description": "An AI-powered mentor that provides contextual help, code generation, and project analysis.",
  "permissions": [
    "sidePanel",
    "storage",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "action": {
    "default_title": "Open FlowMentor"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}